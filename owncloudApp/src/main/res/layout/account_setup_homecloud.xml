<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homecloud_signin_background"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/layout_login"
            android:layout_width="@dimen/login_screen_fields_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_homecloud_login_logo" />

            <LinearLayout
                android:id="@+id/main_login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/hostUrlInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/homecloud_login_server_address_hint"
                    app:endIconDrawable="@drawable/ic_clear_input"
                    app:endIconMode="clear_text"
                    app:expandedHintEnabled="false"
                    app:helperText=" "
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/hostUrlInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:hint="@string/homecloud_login_server_address_input_hint"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textUri"
                        android:textColorHint="@color/homecloud_input_placeholder">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/account_username_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/homecloud_login_email_hint"
                    app:endIconDrawable="@drawable/ic_clear_input"
                    app:endIconMode="clear_text"
                    app:expandedHintEnabled="false"
                    app:helperText=" "
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/account_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:hint="@string/homecloud_login_email_input_hint"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textNoSuggestions"
                        android:textColorHint="@color/homecloud_input_placeholder">

                        <requestFocus />
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/account_password_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:hint="@string/homecloud_login_password_hint"
                    app:endIconDrawable="@drawable/ic_password_toggle"
                    app:endIconMode="password_toggle"
                    app:expandedHintEnabled="false"
                    app:helperText=" "
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/account_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:hint="@string/homecloud_login_password_input_hint"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textPassword"
                        android:textColorHint="@color/homecloud_input_placeholder">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/reset_password_link"
                    style="@style/Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:contentDescription="@string/setup_btn_login"
                    android:text="@string/homecloud_reset_password" />

                <TextView
                    android:id="@+id/error_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/background_login_error"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:visibility="gone"
                    app:drawableStartCompat="@drawable/ic_exclamation_mark_circle"
                    app:drawableTint="@color/homecloud_error"
                    tools:text="Incorrect username or password"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/ctaButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="16dp"
                    android:contentDescription="@string/setup_btn_login"
                    android:text="@string/setup_btn_login"
                    android:theme="@style/Button.Primary" />

                <LinearLayout
                    android:id="@+id/loading_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/circular_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/homecloud_login_loading"
                        android:textAlignment="center"
                        android:textAppearance="?attr/textAppearanceBodyMedium" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/settings_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/actionbar_settings"
        android:padding="@dimen/standard_padding"
        android:src="@drawable/ic_settings"
        android:text="@string/actionbar_settings"
        android:tint="?attr/colorPrimary" />

</FrameLayout>
