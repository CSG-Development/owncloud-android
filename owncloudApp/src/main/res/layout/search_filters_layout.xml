<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:paddingVertical="@dimen/standard_half_padding"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/standard_padding">

        <TextView
            android:id="@+id/filter_type_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/homecloud_global_search_filter_type"
            android:textColor="@color/homecloud_drawer_avatar_text"
            android:textSize="14sp"
            android:background="@drawable/filter_chip_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:drawableEndCompat="@drawable/ic_arrow_down"
            app:drawableTint="@color/homecloud_drawer_avatar_text"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:minHeight="40dp"
            tools:text="Type" />

        <TextView
            android:id="@+id/filter_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_half_padding"
            android:text="@string/homecloud_global_search_filter_date"
            android:textColor="@color/homecloud_drawer_avatar_text"
            android:textSize="14sp"
            android:background="@drawable/filter_chip_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:drawableEndCompat="@drawable/ic_arrow_down"
            app:drawableTint="@color/homecloud_drawer_avatar_text"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:minHeight="40dp"
            tools:text="Date" />

        <TextView
            android:id="@+id/filter_size_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/standard_half_padding"
            android:text="@string/homecloud_global_search_filter_size"
            android:textColor="@color/homecloud_drawer_avatar_text"
            android:textSize="14sp"
            android:background="@drawable/filter_chip_background"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            app:drawableEndCompat="@drawable/ic_arrow_down"
            app:drawableTint="@color/homecloud_drawer_avatar_text"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:minHeight="40dp"
            tools:text="Size" />

    </LinearLayout>

</HorizontalScrollView>

