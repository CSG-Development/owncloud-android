<?xml version="1.0" encoding="utf-8"?><!--

    This separate styles file allows to reduce possible git conflicts with the parent repo

-->
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- THEMES: styles for whole APP or individual ACTIVITIES -->

    <!-- General homeCloud app style.
         To apply directly only on Activities that cannot extend ToolbarActivity;
         otherwise, prefer Theme.homeCloud.Toolbar -->
    <style name="Theme.homeCloud" parent="Theme.Material3.DayNight">
        <item name="android:windowBackground">?attr/colorSurface</item>

        <!-- theme for the app bar (both for old actionbar and new toolbar) -->
        <item name="toolbarStyle">@style/homeCloud.Appbar</item>
        <item name="actionModeStyle">@style/homeCloud.Toolbar.ActionMode</item>
        <item name="appBarLayoutStyle">@style/homeCloud.Appbar</item>
        <item name="drawableTint">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">@bool/lightStatusBar</item>

        <!-- Popup menu -->
        <item name="actionBarPopupTheme">@style/homeCloud.ActionBar.PopupMenu</item>
        <item name="popupMenuBackground">@drawable/bg_popup_menu</item>

        <!-- properties for action mode -->
        <item name="actionBarSize">56dp</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/action_mode_background</item>
        <item name="actionModeCloseButtonStyle">@style/homeCloud.Toolbar.ActionMode.Button</item>
        <item name="actionOverflowButtonStyle">@style/homeCloud.Toolbar.ActionMode.OverflowButton</item>

        <!-- colors, Material Design way -->
        <item name="colorPrimary">@color/homecloud_primary</item>
        <item name="colorPrimaryDark">@color/homecloud_primary_dark</item>
        <item name="colorSecondary">@color/homecloud_secondary</item>
        <item name="colorOnPrimary">?attr/colorSurface</item>
        <item name="colorAccent">@color/homecloud_color_accent</item>
        <item name="colorSurface">@color/homecloud_surface</item>
        <item name="colorSecondaryContainer">@android:color/white</item>
        <item name="colorOnSecondaryContainer">@color/homecloud_blue_darken_2</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
        <item name="colorOnSurfaceVariant">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="colorError">@color/homecloud_error</item>

        <item name="android:textColorPrimary">?attr/colorPrimary</item>
        <item name="android:textColorLink">?attr/colorPrimary</item>
        <item name="android:textColorHighlight">?attr/colorAccent</item>
        <item name="android:textColorSecondary">?attr/colorPrimary</item>
        <item name="android:textColorTertiary">?attr/colorPrimary</item>

        <!-- default theme for alert dialogs -->
        <item name="alertDialogTheme">@style/Theme.homeCloud.AlertDialog</item>
        <item name="materialAlertDialogTheme">@style/Theme.homeCloud.AlertDialog</item>

        <!-- Bottom sheet -->
        <item name="bottomSheetDialogTheme">@style/Theme.homeCloud.BottomSheet</item>
        <item name="bottomSheetDragHandleStyle">@style/homeCloud.BottomSheetStyle.DragHandle</item>

        <!-- style for search view -->
        <item name="searchViewStyle">@style/homeCloud.SearchView</item>

        <!-- Bottom navigation -->
        <item name="bottomNavigationStyle">@style/Theme.homeCloud.BottomNavigation</item>
        <item name="navigationViewStyle">@style/Theme.homeCloud.DrawerNavigation</item>

        <!-- Input text style -->
        <item name="textInputStyle">@style/homeCloud.TextInputLayout.OutlinedBox</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/Button.Primary</item>

        <!-- Radio button -->
        <item name="radioButtonStyle">@style/homeCloud.RadioButton</item>

        <!-- Switch -->
        <item name="switchStyle">@style/homeCloud.Switch</item>

        <!-- Checkbox -->
        <item name="checkboxStyle">@style/homeCloud.CheckBox</item>

        <item name="circularProgressIndicatorStyle">@style/Widget.homeCloud.CircularProgressBar</item>

        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.homeCloud.Splash">
        <item name="android:windowBackground">@drawable/homecloud_splash_screen</item>
    </style>

    <!-- Extends Theme.homeCloud to remove legacy ActionBar from the window and add, via layouts, a Toolbar -->
    <style name="Theme.homeCloud.Toolbar" parent="Theme.homeCloud">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- (status/nav)BarColor are set by the Activity, not the system -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Extends Theme.homeCloud.Toolbar for Drawer activities including Drawer -->
    <style name="Theme.homeCloud.Toolbar.Drawer" parent="Theme.homeCloud.Toolbar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!-- Extends Theme.homeCloud to make LEGACY ActionBar both OVERLAY and TRANSPARENT -->
    <style name="Theme.homeCloud.Overlay" parent="Theme.homeCloud.Toolbar">
        <item name="appBarLayoutStyle">@style/homeCloud.Appbar</item>
        <item name="toolbarStyle">@style/homeCloud.Appbar</item>
    </style>

    <!-- Extends Theme.homeCloud for video in full screen mode -->
    <style name="Theme.homeCloud.Video" parent="Theme.homeCloud.Toolbar">
        <item name="appBarLayoutStyle">@style/homeCloud.Appbar</item>
        <item name="toolbarStyle">@style/homeCloud.Appbar</item>
    </style>

    <!-- DIALOG THEMES: styles for DIALOGs -->

    <!-- DEFAULT (via Theme.homeCloud), and explicitly used ONCE, in Preference "behaviour" for instant uploads - NO MORE, not needed, it's default -->
    <style name="Theme.homeCloud.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/homeCloud.AlertDialog</item>
        <item name="shapeAppearance">@style/homeCloud.AlertDialog.ShapeAppearance</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.homeCloud.Dialog.ButtonBar.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Theme.homeCloud.Dialog.ButtonBar.Button</item>
        <item name="android:background">@color/homecloud_dialog_background</item>
        <item name="android:windowBackground">@color/homecloud_dialog_background</item>
    </style>

    <style name="Theme.homeCloud.Dialog.ButtonBar.Button" parent="@style/Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/selector_borderless_button_color</item>
    </style>

    <style name="homeCloud.AlertDialog" parent="MaterialAlertDialog.Material3">
        <item name="backgroundTint">@color/homecloud_dialog_background</item>
    </style>

    <style name="homeCloud.AlertDialog.ShapeAppearance" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- USED IN SHAREACTIVITY!! !! -->
    <style name="Theme.homeCloud.AlertDialog.NoTitle">
        <item name="windowNoTitle">true</item>
    </style>

    <!-- APP BAR styles -->

    <style name="homeCloud.Appbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/homecloud_bar_background</item>
        <item name="titleTextColor">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/homeCloud.Toolbar.Title</item>
        <item name="android:gravity">center_vertical</item>
        <item name="toolbarNavigationButtonStyle">@style/homeCloud.Toolbar.Button.Navigation.Tinted</item>
        <item name="actionModeStyle">@style/homeCloud.Toolbar.ActionMode</item>
    </style>

    <style name="homeCloud.Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorPrimary</item>
    </style>

    <style name="homeCloud.Toolbar.ActionMode" parent="@style/homeCloud.Appbar">
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="background">@color/homecloud_bar_background</item>
        <item name="titleTextStyle">@style/homeCloud.Toolbar.ActionMode.TitleText</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="homeCloud.Toolbar.ActionMode.Button">
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="homeCloud.Toolbar.ActionMode.OverflowButton" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <style name="homeCloud.Toolbar.ActionMode.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="homeCloud.Toolbar.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="homeCloud.ActionBar.PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <!-- Transparent style for the toolbar -->
    <style name="homeCloud.Appbar.Transparent" parent="homeCloud.Appbar">
        <item name="android:background">@color/homecloud_transparent_bar_background</item>
    </style>

    <style name="Theme.homeCloud.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/homecloud_bar_background</item>
        <item name="itemTextAppearanceActiveBoldEnabled">false</item>
        <item name="itemActiveIndicatorStyle">@style/Theme.homeCloud.BottomNavigation.Indicator</item>
    </style>

    <style name="Theme.homeCloud.DrawerNavigation" parent="Widget.Material3.NavigationView">
        <item name="itemHorizontalPadding">16dp</item>
        <item name="itemIconPadding">32dp</item>
    </style>

    <style name="Theme.homeCloud.BottomNavigation.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/homecloud_blue_darken_2_24</item>
    </style>

    <!-- MORE styles -->

    <style name="homeCloud.SearchView" parent="Widget.AppCompat.SearchView">
        <!-- Close button icon -->
        <item name="closeIcon">@drawable/ic_close</item>
        <!-- Search button icon -->
        <item name="searchIcon">@drawable/ic_search</item>
        <!-- Layout for query suggestion rows -->
        <item name="suggestionRowLayout">@layout/search_suggestion_row</item>>
    </style>

    <!-- Style for top progress bar -->
    <style name="Widget.homeCloud.TopProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <!-- for a custom color independent of @color/primary,
        change value of actionbar_start_color in setup.xml, don't modify here -->
        <item name="android:indeterminateTint">@color/homecloud_bar_background</item>
        <item name="android:background">@color/homecloud_bar_background</item>
        <item name="android:progressDrawable">@drawable/top_progress_bar_determinate</item>
        <item name="android:indeterminateDrawable">@drawable/top_progress_bar_indeterminate</item>
    </style>

    <style name="Widget.homeCloud.CircularProgressBar" parent="@style/Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">@color/homecloud_progressbar_indicator</item>
        <item name="trackThickness">4dp</item>
        <item name="trackColor">@color/homecloud_progressbar_track</item>
        <item name="indeterminateTrackVisible">true</item>
    </style>

    <!-- Button Bar hack due to Lollipop bug:
        https://code.google.com/p/android/issues/detail?id=78302
    fix see:
        http://stackoverflow.com/questions/27187353/dialog-buttons-with-long-text-not-wrapping-squeezed-out-material-theme-on-an
     -->

    <!-- Notifications -->
    <style name="Theme.homeCloud.NotificationText.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.homeCloud.NotificationText.Content" parent="@android:style/TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Authenticator Activity -->
    <style name="Theme.homeCloud.Authenticator" parent="Theme.homeCloud">
        <!-- properties for action mode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/action_mode_background</item>
    </style>

    <style name="Theme.homeCloud.Authenticator.EditText" parent="Theme.homeCloud.Authenticator">
        <item name="colorControlNormal">@color/login_text_color</item>
        <item name="colorControlActivated">@color/login_text_color</item>
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="homeCloud.TextInputLayout.OutlinedBox" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/selector_input_border</item>
        <item name="boxStrokeErrorColor">@color/homecloud_error</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="hintTextColor">@color/selector_input_hint</item>
        <item name="shapeAppearance">@style/homeCloud.TextInputLayout.InputShape</item>
        <item name="endIconTint">?attr/colorPrimary</item>
        <item name="passwordToggleTint">?attr/colorPrimary</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextColor">@color/homecloud_error</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintEnabled">true</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="homeCloud.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="buttonTint">@color/selector_homecloud_radiobutton</item>
    </style>

    <style name="homeCloud.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="trackTint">@color/selector_switch_track</item>
        <item name="thumbTint">@color/selector_switch_thumb</item>
    </style>

    <style name="homeCloud.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/selector_homecloud_checkbox</item>
        <item name="buttonIconTint">@color/selector_homecloud_checkbox_icon</item>
    </style>

    <style name="Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="strokeColor">@color/homecloud_button_secondary_stroke</item>
        <item name="colorOnPrimary">@color/homecloud_button_secondary_text</item>
    </style>

    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="colorPrimary">@color/selector_button_primary_background</item>
        <item name="colorOnPrimary">@color/selector_button_primary_text</item>
        <item name="backgroundTint">@color/selector_button_primary_background</item>
        <item name="android:textColor">@color/selector_button_primary_text</item>
    </style>

    <style name="Button.Borderless" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/selector_borderless_button_color</item>
    </style>

    <style name="homeCloud.TextInputLayout.InputShape" parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Theme.homeCloud.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/homeCloud.BottomSheetStyle</item>
    </style>

    <style name="homeCloud.BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/homecloud_bar_background</item>
        <item name="shapeAppearance">@style/homeCloud.BottomSheet.ShapeAppearance</item>
    </style>

    <style name="homeCloud.BottomSheetStyle.DragHandle" parent="Widget.Material3.BottomSheet.DragHandle">
        <item name="android:minHeight">16dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="srcCompat">@drawable/ic_bottom_sheet_drag_handle</item>
    </style>

    <style name="homeCloud.BottomSheetStyle.Title" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="homeCloud.BottomSheet.ShapeAppearance" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- SortBottomSheetFragment -->
    <style name="Theme.homeCloud.SortBottomSheetFragment" />

    <style name="Theme.homeCloud.SortBottomSheetFragment.Item">
        <item name="android:textAppearance">@style/TextAppearance.OwnCloud.SortBottomSheetFragment.Item</item>
    </style>
</resources>
